<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="185.0" prefWidth="326.0" style="-fx-background-color: lightgray;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="minecraft.ForgotPasswordController">
    <children>
      <VBox alignment="CENTER" layoutX="21.0" layoutY="24.0" prefHeight="89.0" prefWidth="282.0" spacing="10.0" style="-fx-spacing: 20;">
         <children>
            <TextField fx:id="emailField" prefHeight="27.0" prefWidth="169.0" promptText="Enter your email" styleClass="text-body" stylesheets="@minecraft-style.css" />
            <TextField fx:id="codeField" promptText="Enter verification code" styleClass="text-body" stylesheets="@minecraft-style.css" />
            <Label fx:id="errorLabel" textFill="red">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button layoutX="21.0" layoutY="129.0" onAction="#handleGetCodeButtonAction" style="-fx-background-radius: 20;" stylesheets="@minecraft-style.css" text="Get Code">
         <font>
            <Font name="REEJI-Sharp-BlodGB1.0 Regular" size="12.0" />
         </font>
      </Button>
      <Button layoutX="241.0" layoutY="129.0" onAction="#handleVerifyButton" style="-fx-background-radius: 20;" stylesheets="@minecraft-style.css" text="Verify">
         <font>
            <Font name="REEJI-Sharp-BlodGB1.0 Regular" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
