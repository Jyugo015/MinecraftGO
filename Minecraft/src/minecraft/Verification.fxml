<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="132.0" prefWidth="236.0" style="-fx-background-color: lightgray;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="minecraft.VerificationController">
    <VBox alignment="CENTER" layoutX="39.0" layoutY="22.0" spacing="10.0">
        <Label styleClass="text-body" stylesheets="@minecraft-style.css" text="Enter Verification Code">
         <font>
            <Font name="REEJI-Sharp-BlodGB1.0 Regular" size="12.0" />
         </font></Label>
        <TextField fx:id="verificationCodeField" promptText="Verification Code" styleClass="text-body" stylesheets="@minecraft-style.css" />
        <Button onAction="#handleVerifyButtonAction" stylesheets="@minecraft-style.css" text="Verify" />
        <Label fx:id="errorLabel" textFill="RED" />
    </VBox>
</AnchorPane>
