<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="154.0" prefWidth="289.0" style="-fx-background-color: lightgray;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="minecraft.ResetPasswordController">
    <children>
      <VBox alignment="CENTER" layoutX="55.0" layoutY="14.0" prefHeight="121.0" prefWidth="179.0" spacing="10.0">
         <children>
            <PasswordField fx:id="newPasswordField" promptText="Enter new password" styleClass="text-body" stylesheets="@minecraft-style.css" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" styleClass="text-body" stylesheets="@minecraft-style.css" />
            <Label fx:id="errorLabel" contentDisplay="CENTER" prefHeight="11.0" prefWidth="179.0" styleClass="text-custom" stylesheets="@minecraft-style.css" textFill="red">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            <Button onAction="#handleConfirmButtonAction" prefHeight="28.0" prefWidth="75.0" stylesheets="@minecraft-style.css" text="Confirm">
               <font>
                  <Font name="REEJI-Sharp-BlodGB1.0 Regular" size="12.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
